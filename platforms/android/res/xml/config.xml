<?xml version='1.0' encoding='utf-8'?>
<widget id="chk.kingnet.app" version="1.3.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="PushNotification">
        <param name="android-package" value="com.adobe.phonegap.push.PushPlugin" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <feature name="FileTransfer">
        <param name="android-package" value="org.apache.cordova.filetransfer.FileTransfer" />
    </feature>
    <feature name="Brightness">
        <param name="android-package" value="org.apache.cordova.plugin.Brightness.BrightnessPlugin" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="ActionSheet">
        <param name="android-package" value="nl.xservices.plugins.actionsheet.ActionSheet" />
    </feature>
    <feature name="Keyboard">
        <param name="android-package" value="io.ionic.keyboard.IonicKeyboard" />
        <param name="onload" value="true" />
    </feature>
    <feature name="DatePickerPlugin">
        <param name="android-package" value="com.plugin.datepicker.DatePickerPlugin" />
    </feature>
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <feature name="ListPicker">
        <param name="android-package" value="am.armsoft.plugins.ListPicker" />
    </feature>
    <feature name="GoogleMaps">
        <param name="android-package" value="plugin.google.maps.GoogleMaps" />
    </feature>
    <feature name="External">
        <param name="android-package" value="plugin.google.maps.External" />
    </feature>
    <feature name="Geocoder">
        <param name="android-package" value="plugin.google.maps.MyGeocoder" />
    </feature>
    <feature name="Calendar">
        <param name="android-package" value="nl.xservices.plugins.Calendar" />
    </feature>
    <feature name="UniversalAnalytics">
        <param name="android-package" value="com.danielcwilson.plugins.analytics.UniversalAnalyticsPlugin" />
    </feature>
    <feature name="SocialSharing">
        <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
    </feature>
    <feature name="Clipboard">
        <param name="android-package" value="com.niconaso.cordova.clipboard.Clipboard" />
    </feature>
    <feature name="NativeSettings">
        <param name="android-package" value="com.phonegap.plugins.nativesettings.NativeSettings" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.Geolocation" />
    </feature>
    <feature name="GooglePlus">
        <param name="android-package" value="nl.xservices.plugins.GooglePlus" />
        <param name="onload" value="true" />
    </feature>
    <access origin="https://accounts.google.com/*" />
    <feature name="FacebookConnectPlugin">
        <param name="android-package" value="org.apache.cordova.facebook.ConnectPlugin" />
        <param name="onload" value="true" />
    </feature>
    <access origin="https://m.facebook.com" />
    <access origin="https://graph.facebook.com" />
    <access origin="https://api.facebook.com" />
    <access origin="https://*.fbcdn.net" />
    <access origin="https://*.akamaihd.net" />
    <preference name="android-minSdkVersion" value="15" />
    <feature name="ThemeableBrowser">
        <param name="android-package" value="com.initialxy.cordova.themeablebrowser.ThemeableBrowser" />
    </feature>
    <feature name="Open">
        <param name="android-package" value="com.disusered.Open" />
    </feature>
    <access origin="https://ssl.gstatic.com/accessibility/javascript/android/*" />
    <feature name="MobileAccessibility">
        <param name="android-package" value="com.phonegap.plugin.mobileaccessibility.MobileAccessibility" />
    </feature>
    <icon density="ldpi" src="res/icon/48.png" />
    <icon density="mdpi" src="res/icon/72.png" />
    <icon density="hdpi" src="res/icon/96.png" />
    <icon density="xhdpi" src="res/icon/144.png" />
    <icon density="xxhdpi" src="res/icon/192.png" />
    <splash density="port-hdpi" src="res/splash/ldpi.png" />
    <splash density="port-ldpi" src="res/splash//mdpi.png" />
    <splash density="port-mdpi" src="res/splash/hdpi.png" />
    <splash density="port-xhdpi" src="res/splash/xhdpi.png" />
    <splash density="port-xxhdpi" src="res/splash/xxhdpi.png" />
    <splash density="port-xxxhdpi" src="res/splash/xxxhdpi.png" />
    <allow-intent href="market:*" />
    <name>今網行動管家</name>
    <description>
        今網提供客戶更貼心的APP服務軟體
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Kingnet Developer Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="cdvfile://*/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="SplashShowOnlyFirstTime" value="true" />
    <preference name="Orientation" value="portrait" />
</widget>
